{
    "compilerOptions": {
        "outDir": "./dist/",
        "baseUrl": ".",
        "paths": {
            "*": ["typings/*", "node_modules/@types"]
        },
        "sourceMap": true,
        "noImplicitAny": true,
        "module": "es6",
        "target": "es5",
        "jsx": "react",
        "allowJs": true,
        // 解决一些引入模块找不到报错的设置
        "moduleResolution": "node",
        "allowSyntheticDefaultImports": true,
        "experimentalDecorators": true
    },
    "include": ["src/*", "typings/index.d.ts"],
    "exclude": ["node_modules"]
}
